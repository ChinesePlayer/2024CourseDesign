<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- 学生个人简历界面 FXML配置文件 对应页面交互控制类 com.teach.javafx.controller.StudentIntroduceController -->

<BorderPane styleClass="borderpane-container" stylesheets="@css/person-style-class.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teach.javafx.controller.StudentIntroduceController">
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox alignment="TOP_CENTER" spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <GridPane hgap="0" prefHeight="117.0" prefWidth="1034.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="80.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="160.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="31.333333333333332" minHeight="10.0" prefHeight="31.333333333333332" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="39.66666666666667" minHeight="10.0" prefHeight="27.666666666666668" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="53.0" minHeight="10.0" prefHeight="34.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="38.0" minHeight="10.0" prefHeight="24.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="学号 :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="num" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="姓名 :" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <Label fx:id="name" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        <Label text="学院 :" GridPane.columnIndex="4" GridPane.rowIndex="0" />
                        <Label fx:id="dept" GridPane.columnIndex="5" GridPane.rowIndex="0" />
                        <Button fx:id="photoButton" onAction="#onPhotoButtonClick" styleClass="border_black_1" GridPane.columnIndex="6" GridPane.rowIndex="0" GridPane.rowSpan="4" />
                        <Label text="专业 :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="major" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="班级 :" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Label fx:id="className" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                        <Label text="证件号码 :" GridPane.columnIndex="4" GridPane.rowIndex="1" />
                        <Label fx:id="card" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                        <Label text="性别 :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="gender" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="出生日期 :" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <Label fx:id="birthday" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                        <Label text="邮箱 :" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                        <Label fx:id="email" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                        <Label text="电话 :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label fx:id="phone" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="地址 :" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <Label fx:id="address" GridPane.columnIndex="3" GridPane.columnSpan="3" GridPane.rowIndex="3" />
                    </children>
                </GridPane>
                <FlowPane alignment="CENTER" hgap="10">
                    <Button onAction="#onEditIntroButtonClick" text="编辑个人简历" />
                    <Button onAction="#onCheckDraw" text="查看个人画像" />
                </FlowPane>
                <HBox>
                    <TableView fx:id="scoreTable" prefHeight="560.0" prefWidth="800.0">
                        <columns>
                            <TableColumn fx:id="courseNum" prefWidth="160.0" text="课程号" />
                            <TableColumn fx:id="courseName" prefWidth="160.0" text="课程名" />
                            <TableColumn fx:id="credit" prefWidth="160.0" text="学分" />
                            <TableColumn fx:id="mark" prefWidth="160.0" text="成绩" />
                            <TableColumn fx:id="rank" prefWidth="160.0" text="排名" />
                        </columns>
                    </TableView>
                    <VBox alignment="CENTER" prefHeight="560.0" spacing="5.0">
                        <children>
                            <BarChart fx:id="barChart" prefWidth="600">
                                <xAxis>
                                    <CategoryAxis label="日期" side="BOTTOM" />
                                </xAxis>
                                <yAxis>
                                    <NumberAxis label="金额" side="LEFT" />
                                </yAxis>
                            </BarChart>
                            <PieChart fx:id="pieChart" />
                        </children>
                        <padding>
                            <Insets bottom="3.0" left="30.0" right="3.0" top="3.0" />
                        </padding>
                    </VBox>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
