<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import com.teach.javafx.customWidget.CourseTable?>
<?import io.github.palexdev.materialfx.controls.cell.MFXListCell?>
<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.teach.javafx.controller.courseSelection.CourseSelectionController"
            stylesheets="@../css/pane-course-selection.css">
    <top>
        <HBox>
            <MFXButton fx:id="checkChosenButton" text="查看已选课程" onAction="#onCheckChosenButtonPressed">
                <HBox.margin>
                    <Insets left="10.0" right="10.0" top="10.0" bottom="10.0" />
                </HBox.margin>
            </MFXButton>
        </HBox>
    </top>
    <center>
        <VBox>
            <HBox alignment="CENTER">
                <CourseTable fx:id="courseTable" prefWidth="600" prefHeight="400" />
                <Label fx:id="allCredit" styleClass="creditText">
                    <HBox.margin>
                        <Insets top="20" bottom="20" left="20" right="20"/>
                    </HBox.margin>
                </Label>
            </HBox>
            <TableView fx:id="courseTableView">
                <columns>
                    <TableColumn fx:id="courseName" text="课程名称" />
                    <TableColumn fx:id="courseNum" text="课程编号" />
                    <TableColumn fx:id="credit" text="学分" />
                    <TableColumn fx:id="days" text="星期" />
                    <TableColumn fx:id="sections" text="节次" />
                    <TableColumn fx:id="teacher" text="教师" />
                    <TableColumn fx:id="loc" text="上课地点" />
                    <TableColumn fx:id="preCourse" text="前序课程" />
                    <TableColumn fx:id="action" text="操作" />
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
